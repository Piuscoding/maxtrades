

<%- include('partials/dashboardHeader')%>

<div class="deposit-history">
    <div class="table-responsive">

      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col">Wallet</th>
            <th scope="col">Amount</th>
            <th scope="col">status</th>
            <th scope="col" class="text-end">Action</th>
          </tr>
        </thead>
    
        <tbody>
          <% if(user.widthdraws.length > 0 ){ %>
          <%  user.widthdraws.forEach(widthdraw => {  %>
            <tr class="align-middle">
              <td><%=widthdraw.wallet%></td>
              <td><%=widthdraw.amount%></td>
              <td><%=widthdraw.status%></td>
              <td class="text-end">
                <div class="d-flex flex-row justify-content-end gap-2">
                 <button type="button" class="btn btn-success"><i class="bi bi-check"></i></button>
                </div>
              </td>
            </tr>
          <%  }) %>
        <%  } %>
        </tbody>
      </table>
      </div>
</div>

<%- include('partials/dashboardFooter')%>